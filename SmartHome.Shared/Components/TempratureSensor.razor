@using SmartHome.Dto.Dashboard


<div class="bg-blue-100 px-2 py-2 rounded-full flex items-center gap-2">
    <i class="bi bi-thermometer-half text-blue-600"></i>
    <span class="text-blue-600 font-normal">@DeviceModel.State["temperature_celsius"]°C</span>
    <span class="text-blue-600 font-normal"> | </span>
    <i class="bi bi-droplet-half text-blue-600"></i>
    <span class="text-blue-600 font-normal">@DeviceModel.State["humidity_percent"]%</span>
</div>

@code {
    [Parameter]
    public OverviewDeviceDto DeviceModel { get; set; } = new();

}
