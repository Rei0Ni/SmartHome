@page "/overview"
@layout MainLayout
@using SmartHome.Dto.Dashboard
@using SmartHome.Shared.Components
@using SmartHome.Shared.Interfaces
@inject IFormFactor FormFactor

<PageTitle>Overview</PageTitle>

<AuthorizeView> 
    <Authorized>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

        <div class="w-full mb-2">
            <!-- Card Container -->
            <div class="bg-white shadow-sm rounded-xl p-6 space-y-6">
                <!-- Welcome & Last Update -->
                <div class="flex flex-col md:flex-row md:justify-between md:items-center">
                    <h1 class="text-2xl font-bold text-gray-800">
                        Welcome, <span class="text-indigo-600">@context.User.Identity.Name</span>!
                    </h1>
                    <p class="text-sm text-gray-500 mt-2 md:mt-0">
                        Last update: <span class="font-medium">4:30 PM</span>
                    </p>
                </div>

                <!-- Overview Grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Temperature -->
                    <div class="bg-indigo-50 p-4 rounded-xl flex flex-col items-start transform transition duration-300 hover:scale-105 hover:shadow-xl">
                        <h2 class="text-xl font-semibold text-indigo-700">🌡️ Temperature</h2>
                        <p class="text-3xl font-bold text-indigo-900 mt-2">24°C</p>
                        <p class="text-sm text-indigo-600 mt-1">Mild & comfortable</p>
                    </div>

                    <!-- Suggestion -->
                    <div class="bg-yellow-50 p-4 rounded-xl flex flex-col items-start transform transition duration-300 hover:scale-105 hover:shadow-xl">
                        <h2 class="text-xl font-semibold text-yellow-800">💡 Suggestion</h2>
                        <p class="text-sm text-yellow-700 mt-2">
                            It's mild – no climate adjustment needed.
                        </p>
                    </div>

                    <!-- Home Status -->
                    <div class="bg-green-50 p-4 rounded-xl col-span-1 sm:col-span-2 lg:col-span-1 transform transition duration-300 hover:scale-105 hover:shadow-xl">
                        <h2 class="text-xl font-semibold text-green-800">🏠 Home Status</h2>
                        <ul class="mt-2 space-y-1 text-gray-700">
                            <li>Internal Temperature: <span class="font-medium">24°C</span></li>
                            <li>Humidity: <span class="font-medium">40%</span></li>
                            <li>System Health: <span class="font-medium">Healthy</span></li>
                            @* <li>Connectivity: <span class="font-medium">Connected</span></li> *@
                            @* <li>Security: <span class="font-medium">Active</span></li> *@
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- ====================================== -->
        <div class="contanier p-0">
            <!-- Main Contaner of areas -->
            <div class="container grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2 p-0 m-0">
                <!-- to control # of Area in Page-->
                @foreach (var area in OverviewData.Areas)
                {
                    <Area AreaModel="area" />
                }

                <!-- secound Area test -->

            </div>
        </div>
    </Authorized>
    <NotAuthorized> 
        @{ 
            navigationManager.NavigateTo("/login"); 
        } 
    </NotAuthorized>
</AuthorizeView>



@code {
    private string factor => FormFactor.GetFormFactor();
    private string platform => FormFactor.GetPlatform();
}