@page "/manage-controllers"
@using System.Text.Json
@using SmartHome.Dto.Controller
@layout MainLayout

<PageTitle>Manage Controllers</PageTitle>

<AuthorizeView Roles="Admin">
    <Authorized>
        @if (!context.User.IsInRole("Admin"))
        {
            navigationManager.NavigateTo("/overview");
            toastService.ShowWarning("You are NOT Authorized to be Here");
        }
        <div class="flex justify-between items-center mb-6 px-4">
            <h3 class="text-2xl font-semibold text-gray-800 dark:text-gray-50">Manage Controllers</h3>
            <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white cursor-pointer"
            style="background-color:var(--primary)"
            onmouseover="this.style.opacity='0.85'"
            onmouseout="this.style.opacity='1'"
            @onclick="NavigateToControllerCreation">
                <i class="fas fa-plus mr-2"></i>New Controller
            </button>
        </div>

        <div class="bg-background shadow-sm overflow-hidden">
            <div class="overflow-x-auto rounded-lg shadow-md border border-gray-200 dark:border-gray-700">

                @if (isLoading)
                {
                    <div class="text-center bg-gray-50 dark:text-gray-50 dark:bg-[#393E46] py-12">
                        <p>Loading Controllers</p>
                        <div class="flex justify-center align-center mt-2" role="status">
                            <svg aria-hidden="true" class="inline w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-purple-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor" />
                                <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="#7e6ab2" />
                            </svg>
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                }
                else
                {
                    @if (controllers.Count == 0)
                    {
                        <div class="text-center p-8 bg-gray-50 dark:bg-[#393E46] flex flex-col justify-center items-center rounded-md">
                            <span class="dark:text-gray-50 mb-6">There are no Controllers here yet.</span>
                            <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white cursor-pointer"
                                    style="background-color:var(--primary)"
                                    onmouseover="this.style.opacity='0.85'"
                                    onmouseout="this.style.opacity='1'"
                                    @onclick="NavigateToControllerCreation">
                                Create New Device
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="w-full min-w-[800px]">
                            <table class="min-w-full">
                                <thead class="bg-gray-50 dark:bg-[#927FBF]">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">Name</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">Mac Address</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">IP Address</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white dark:bg-[#393E46] divide-y divide-gray-200 dark:divide-gray-700">
                                    @foreach (var controller in controllers)
                                    {
                                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-500 dark:hover:bg-gray-500 transition-colors">
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-200">@controller.Name</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-200">@controller.MACAddress</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-200">@controller.IPAddress</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                                <button class="px-3 py-1.5  text-white rounded-md hover:bg-blue-700 transition-colors cursor-pointer" style="background-color:var(--primary)"
                                                @onclick="@(() => navigationManager.NavigateTo($"/edit-controller/{controller.Id.ToString()}"))">
                                                    Edit
                                                </button>
                                                <button class="px-3 py-1.5 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors cursor-pointer"
                                                @onclick="() => ConfirmDelete(controller)">
                                                    Delete
                                                </button>
                                                @if (controller.NeedsReconfiguration)
                                                {
                                                    <button class="px-3 py-1.5 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors cursor-pointer"
                                                    @onclick="() => ReconfigureController(controller)">
                                                        Reconfigure
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                }

            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="text-center p-6 sm:p-8">
            <div class="mx-auto max-w-md">
                <svg class="mx-auto h-12 w-12 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                </svg>
                <h3 class="mt-2 text-lg sm:text-xl font-semibold text-gray-800 dark:text-gray-50 mb-2">Unauthorized Access</h3>
                <p class="text-gray-600 dark:text-gray-200 text-sm sm:text-base">You don't have permission to manage controllers.</p>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@if (showDeleteModal)
{
    <div class="fixed inset-0 z-50 overflow-y-auto">
        <div class="flex items-center justify-center min-h-screen px-4 text-center">
            <!-- الخلفية المعتمة -->
            <div class="fixed inset-0 transition-opacity" aria-hidden="true">
                <div class="absolute inset-0 bg-gray-500 dark:bg-black opacity-75"></div>
            </div>

            <!-- محتوى الـ Modal -->
            <div class="inline-block align-middle bg-surface rounded-lg text-left overflow-hidden shadow-xl transform transition-all w-full max-w-lg mx-4 my-8 z-10">
                <!-- محتوى النص -->
                <div class="bg-surface px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
                            <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-50">Confirm Deletion</h3>
                            <div class="mt-2">
                                <p class="text-sm text-gray-500 dark:text-gray-50">Are you sure you want to delete @selectedController?.Name?</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- الأزرار -->
                <div class="bg-gray-50 dark:bg-gray-800 px-4 py-3 flex flex-col-reverse sm:flex-row sm:justify-end gap-3">
                    <button type="button"
                            class="w-full sm:w-auto inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 dark:bg-gray-600 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 dark:text-gray-50 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none sm:text-sm cursor-pointer"
                            @onclick="CloseDeleteModal">
                        Cancel
                    </button>
                    <button type="button"
                            class="w-full sm:w-auto inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none sm:text-sm cursor-pointer"
                            @onclick="DeleteController">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    List<ControllerDto> controllers = new List<ControllerDto>();
    private bool showDeleteModal = false;
    private ControllerDto? selectedController;

    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;

        await base.OnInitializedAsync();
        var result = await ApiService.GetAsync("api/controller/get/all");
        if (result.IsSuccessStatusCode)
        {
            var content = await result.Content.ReadFromJsonAsync<List<ControllerDto>>();
            controllers = content;
        }
        else
        {
            // Show error message in toast
        }

        isLoading = false;
    }

    private void NavigateToControllerCreation()
    {
        navigationManager.NavigateTo("/create-controller");
    }

    private void ConfirmDelete(ControllerDto controller)
    {
        selectedController = controller;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        selectedController = null;
    }

    private async Task DeleteController()
    {
        if (selectedController != null)
        {
            var result = await ApiService.SendAsync<object>(HttpMethod.Delete, $"api/controller/delete/{selectedController.Id}");
            if (result.IsSuccessStatusCode)
            {
                controllers.Remove(selectedController);
                toastService.ShowSuccess($"{selectedController.Name} has been successfully deleted.");
            }
            else
            {
                // Show error message in toast
                toastService.ShowError("Failed to delete the Controller.");
            }
            showDeleteModal = false;
            selectedController = null;
        }
    }

    private async Task ReconfigureController(ControllerDto controller)
    {
        var result = await ApiService.SendAsync<object>(HttpMethod.Post, $"api/controller/config/update/{controller.Id}");
        if (result.IsSuccessStatusCode)
        {
            toastService.ShowSuccess($"Controller '{controller.Name}' has been successfully reconfigured.");
        }
        else
        {
            // Show error message in toast
            toastService.ShowError("Failed to Update the Controller Configuration.");
        }
    }
}