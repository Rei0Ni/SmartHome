@page "/hostconfigerror"
@layout ErrorLayout

@inject IHostStatusService hostStatusService

<PageTitle>Host Error</PageTitle>

<div class="flex flex-col items-center">
	<div class="text-start mb-4">
		<h3 class="text-xl text-center font-bold text-sky-400">Host Error</h3>
		<p class="mt-4 text-slate-400">
			Oops An Error Happened When trying to Contact the Backend.
			<br />
			it might be a problem with the hosts configuration.
			<br />
			you might wan't to reconfigure them
		</p>
	</div>



	<div class="d-flex justify-content-center mt-2">
		<button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white"
				style="background-color:var(--primary)"
				@onclick="RedirectToHostConfiguration">
			Reconfigure Hosts
		</button>
	</div>
</div>


@code{
    private void RedirectToHostConfiguration(){
        hostStatusService.SetHostConfigurationError(false);
        navigationManager.NavigateTo("/hostconfiguration");
    }
}